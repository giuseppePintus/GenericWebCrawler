{
  "global_settings": {
    "max_pages": 100,
    "delay": 1.0,
    "allowed_types": [
      "text/html",
      "application/pdf",
      "image/jpeg",
      "image/png"
    ],
    "headers": {
      "Accept": "text/html,application/xhtml+xml,application/xml;q=0.9,image/webp,*/*;q=0.8",
      "Accept-Language": "en-US,en;q=0.5",
      "User-Agent": "GeneralSpider/1.0"
    },
    "default_protocol": "https",
    "fallback_protocol": "http"
  },
  "sites": {
    "agrea": {
      "domain": "agrea.regione.emilia-romagna.it",
      "start_url": "https://agrea.regione.emilia-romagna.it/",
      "max_pages": 200,
      "delay": 2.0,
      "allowed_types": ["text/html", "application/pdf"]
    },
    "agricoltura": {
      "domain": "agricoltura.regione.emilia-romagna.it",
      "start_url": "https://agricoltura.regione.emilia-romagna.it/",
      "max_pages": 150,
      "delay": 1.5
    },
    "avepa": {
      "domain": "www.avepa.it",
      "start_url": "https://www.avepa.it/",
      "allowed_types": ["text/html", "application/pdf", "image/jpeg"]
    }
  }
}